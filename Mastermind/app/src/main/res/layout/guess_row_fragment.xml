<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:id="@+id/myLayout"
    >
    <RelativeLayout
        android:background="@drawable/rounded_border"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginHorizontal="15dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        >

        <ImageView android:id="@+id/peg_btn_1"
            style="@style/peg_btn"
            android:background="@drawable/peg_btn_white"
            />

        <ImageView android:id="@+id/peg_btn_2"
            style="@style/peg_btn"
            android:background="@drawable/peg_btn_white"
            android:layout_toRightOf="@+id/peg_btn_1"/>

        <ImageView android:id="@+id/peg_btn_3"
            style="@style/peg_btn"
            android:background="@drawable/peg_btn_white"
            android:layout_toRightOf="@+id/peg_btn_2"/>

        <ImageView android:id="@+id/peg_btn_4"
            style="@style/peg_btn"
            android:background="@drawable/peg_btn_white"
            android:layout_toRightOf="@+id/peg_btn_3"/>


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/peg_btn_4"
            android:background="@null"
            android:columnCount="3"
            android:foreground="@null"
            android:rowCount="3">

            <ImageView
                android:id="@+id/feedback_node_4"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@drawable/feedback_peg">

            </ImageView>

            <ImageView
                android:id="@+id/feedback_node_1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_row="0"
                android:layout_column="1"
                android:background="@drawable/feedback_peg">

            </ImageView>

            <ImageView
                android:id="@+id/feedback_node_2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@drawable/feedback_peg">

            </ImageView>

            <ImageView
                android:id="@+id/feedback_node_3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_row="2"
                android:layout_column="1"
                android:background="@drawable/feedback_peg">

            </ImageView>


        </GridLayout>
    </RelativeLayout>
</LinearLayout>